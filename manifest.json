{
  "manifest_version": 3,
  "name": "GitHub Code Review Helper",
  "version": "1.0",
  "description": "Quickly toggle viewing state of code on GitHub pull requests or reviews with one click!",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}